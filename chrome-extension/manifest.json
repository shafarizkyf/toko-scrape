{
    "manifest_version": 3,
    "name": "Shopee Product Scraper",
    "version": "1.0.0",
    "description": "Scrape products from Shopee store pages",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "vite.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "*://shopee.co.id/*",
                "*://*.shopee.co.id/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}